{
  "name": "dkzlv-blog",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "open http://blog:3000/ & sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "content:post": "node scripts/content/post.js",
    "content:leak": "node scripts/content/leak.js",
    "db:tag": "node scripts/db/tag.js",
    "db:org": "node scripts/db/org.js",
    "db:location": "node scripts/db/location.js"
  },
  "dependencies": {
    "@mojs/core": "git+https://github.com/dkzlv/mojs.git",
    "@sindresorhus/slugify": "^1.1.0",
    "compression": "^1.7.1",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "feed": "^4.2.1",
    "fingerprintjs2": "^2.1.2",
    "js-yaml": "^3.14.0",
    "marked": "^1.2.5",
    "nanoid": "^3.1.18",
    "sirv": "^1.0.7",
    "svelte-i18n": "^3.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/runtime": "^7.12.5",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/express": "^4.17.9",
    "@types/js-yaml": "^3.12.5",
    "@types/lowdb": "^1.0.9",
    "@types/marked": "^1.2.0",
    "@typescript-eslint/parser": "^4.8.1",
    "autoprefixer": "^10.0.2",
    "cssnano": "^4.1.10",
    "dotenv-flow": "^3.2.0",
    "enquirer": "^2.3.6",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "image-size": "^0.9.3",
    "lowdb": "^1.0.0",
    "modularscale-sass": "^3.0.8",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.9",
    "postcss-load-config": "^3.0.0",
    "prettier": "^2.2.0",
    "rollup": "^2.33.3",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "sapper": "^0.28.10",
    "sass-mq": "^5.0.1",
    "svelte": "^3.29.7",
    "svelte-preprocess": "^4.6.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "browserslist": "> 0.5%, not ie > 0, not OperaMini all, not Opera > 0, not dead",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-console": 0,
      "no-unused-vars": 0,
      "no-dupe-class-members": 0,
      "no-undef": 0,
      "no-irregular-whitespace": 0,
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "build/",
    "node_modules/",
    "__sapper__/",
    "cypress/"
  ],
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "arrowParens": "avoid",
    "semi": true,
    "singleQuote": true,
    "printWidth": 100
  }
}
