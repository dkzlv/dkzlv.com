{
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "**/*.js"
  ],
  "compilerOptions": {
    "target": "es2019",
    "types": [
      "svelte",
      "node",
      "express"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  }
}